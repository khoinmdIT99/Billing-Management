@model IEnumerable<Billing.ViewModel.AirlinesListViewModel>
@{ ViewBag.Title = "Airlines"; }
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    Airlines
                </div>
            </div>
            <div class="panel-body">
                <table class="table table-bordered table-condensed table-hover table-responsive table-striped">
                    <tr>
                        <th style="text-align: center;"> SL. </th>
                        <th>Name</th>
                        <th style="text-align: center;">Code</th>
                        <th style="text-align: center;">Action</th>
                    </tr>
                    @{ int i = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.SL)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Code)</td>
                            <td style="text-align: center;">
                                <a href="@Html.Raw(@Url.Action("Edit", "Airlines", new { @id = item.Id }))">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                </table>
            </div>
            <div class="panel-body text-center">
                <a href="@Url.Action("Create", "Airlines")" class="btn btn-default btn-sm">Add Airlines</a>
            </div>
        </div>
    </div>
</div>
