@model IEnumerable<Billing.ViewModel.VendorListViewModel>

@{
    ViewBag.Title = "Vendor List";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    Vendor List
                </div>
            </div>
            <div class="panel-body">
                <table class="table table-bordered table-condensed table-hover table-responsive table-striped" id="vendorTable">
                    <thead>
                        <tr>
                            <th style="text-align: center; width: 5%;">SL. </th>
                            <th style="text-align: left; width: 20%;">Name </th>
                            <th style="text-align: left; width: 15%;">Email </th>
                            <th style="text-align: left; width: 15%;">Telephone </th>
                            <th style="text-align: left; width: 15%;">FaxNo </th>
                            <th style="text-align: right; width: 15%;">Balance </th>
                            <th style="text-align: center; width: 10%;">Ledger </th>
                            <th style="text-align: center; width: 5%;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1; }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align: center;">@i </td>
                                <td style="text-align: left;">@Html.DisplayFor(modelItem => item.Name)</td>
                                <td style="text-align: left;">@Html.DisplayFor(modelItem => item.Email)</td>
                                <td style="text-align: left;">@Html.DisplayFor(modelItem => item.Telephone)</td>
                                <td style="text-align: left;">@Html.DisplayFor(modelItem => item.FaxNo)</td>
                                <td style="text-align: right;">&pound; @item.Balance.ToString("f2")</td>
                                <td style="text-align: center;">
                                    <a href="@Html.Raw(@Url.Action("Ledger", "Vendor", new { @id = item.Id }))">
                                        <i class="fa fa-book"></i>
                                    </a>
                                </td>
                                <td style="text-align: center;">
                                    <a href="@Html.Raw(@Url.Action("Edit", "Vendor", new { @id = item.Id }))">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#vendorTable').DataTable();
    });
</script>