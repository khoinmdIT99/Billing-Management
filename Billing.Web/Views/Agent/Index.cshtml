@model IEnumerable<Billing.Entities.Agent>

@{
    ViewBag.Title = "Agents List";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    Agents List
                </div>
            </div>
            <div class="panel-body">
                <table class="table table-bordered table-condensed table-hover table-responsive table-striped" id="agentTable">
                    <thead>
                        <tr>
                            <th style="text-align: center; width: 5%;">SL.</th>
                            <th style="text-align: left; width: 25%;">Name</th>
                            <th style="text-align: left; width: 15%;">Email</th>
                            <th style="text-align: left; width: 10%;">Telephone</th>
                            <th style="text-align: left; width: 10%;">Mobile</th>
                            <th style="text-align: right; width: 10%;">Credit</th>
                            <th style="text-align: right; width: 15%;">Receivable</th>
                            <th style="text-align: center; width: 5%;">Ledger</th>
                            <th style="text-align: center; width: 5%;" title="Update Agent Information">Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1; }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align: center;">@i</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td> @Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Telephone)</td>
                                <td>@Html.DisplayFor(modelItem => item.Mobile)</td>
                                <td style="text-align: right;">@(item.CreditLimit.ToString("f2"))</td>
                                <td style="text-align: right;">@(item.Balance.ToString("f2"))</td>
                                <td style="text-align: center;">
                                    <a href="@Html.Raw(@Url.Action("Ledger", "Agent", new { @id = item.Id }))">
                                        <i class="fa fa-book"></i>
                                    </a>
                                </td>
                                <td style="text-align: center;">
                                    <a href="@Html.Raw(@Url.Action("Edit", "Agent", new { @id = item.Id }))">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#agentTable').DataTable();
    });
</script>