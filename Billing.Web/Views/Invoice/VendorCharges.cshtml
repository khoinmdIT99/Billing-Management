@model IEnumerable<Billing.Entities.InvoiceName>
<table class="table table-bordered table-condensed table-hover table-responsive">
    <tr>
        <th style="text-align: left; width: 25%;">@Html.DisplayNameFor(model => model.Name)</th>
        <th style="text-align: left; width: 20%;">Ticket No.</th>
        <th style="text-align: right; width: 11%;">V. Net Fare</th>
        <th style="text-align: right; width: 11%;">Tax</th>
        <th style="text-align: right; width: 11%;">V. Charge</th>
        <th style="text-align: right; width: 11%;">APC</th>
        <th style="text-align: right; width: 11%;">Total</th>
    </tr>
    @{  double TicketTotal = 0; double Total = 0;
        foreach (var item in Model) {
        TicketTotal = (item.VNetFare + item.VendorCharge + item.Apc + item.TicketTax);
        Total = Total + TicketTotal;
    <tr>
        <td style="text-align: left;">@Html.DisplayFor(modelItem => item.Name)</td>
        <td style="text-align: left;">@Html.DisplayFor(modelItem => item.TicketNo)</td>
        <td style="text-align: right;">@Html.DisplayFor(modelItem => item.VNetFare)</td>
        <td style="text-align: right;">@Html.DisplayFor(modelItem => item.TicketTax)</td>
        <td style="text-align: right;">@Html.DisplayFor(modelItem => item.VendorCharge)</td>
        <td style="text-align: right;">@Html.DisplayFor(modelItem => item.Apc)</td>
        <td style="text-align: right;">@TicketTotal</td>
    </tr>
    }}
    <tfoot>
        <tr>
            <th colspan="7" style="text-align: right;">@Total</th>
        </tr>
    </tfoot>
</table>
