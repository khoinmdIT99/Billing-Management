@model Billing.ViewModel.GeneralVoucherPostingViewModel

@{
    ViewBag.Title = "Ledger";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    Ledger Posting
                </div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })                        
                        <div class="form-group">
                            <label class="control-label col-md-2" for="Ledgerhead">Head</label>
                            <div class="col-md-10">
                                <select id="GeneralLedgerHeadId" name="GeneralLedgerHeadId" required class="form-control">
                                    <option value="0">Ledger Head</option>
                                    @foreach (var item in Model.GeneralLedgerHeads)
                                    {
                                        <option value="@item.Id"> @item.GeneralLedgerHeadName </option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.LedgerDate, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="text" name="LedgerDate" id="LedgerDate" class="form-control calendar" placeholder="Ledger Date" required value="@DateTime.Now.ToString("MM/dd/yyyy")" />
                                @*@Html.EditorFor(model => model.LedgerDate, new { htmlAttributes = new { @class = "form-control calendar", @value = DateTime.Now.ToString("MM/dd/yyyy") } })*@
                                @Html.ValidationMessageFor(model => model.LedgerDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default btn-sm" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>