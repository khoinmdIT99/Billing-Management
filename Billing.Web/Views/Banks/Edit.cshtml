@model Billing.Entities.BankAccount

@{
    ViewBag.Title = "Edit Bank Account";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    @ViewBag.Title
                </div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            <label class="control-label col-md-2" for="BankNames">Bank</label>
                            <div class="col-md-10">
                                @Html.DropDownList("BankNames", EnumHelper.GetSelectList(typeof(Billing.Entities.BankName)), "Select Bank", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.BankNames, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" for="BankNames">Account No</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.AccountNo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AccountNo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" for="BankNames">Account Name</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.AccountNames, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AccountNames, "", new { @class = "text-danger" })
                            </div>
                        </div>

