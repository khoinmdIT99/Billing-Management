@model Billing.Entities.GeneralLedgerHead

@{
    ViewBag.Title = "Edit Ledger Head";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    @ViewBag.Title
                </div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.GeneralLedgerHeadName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.GeneralLedgerHeadName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.GeneralLedgerHeadName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2" for="GeneralLedgerType">Type</label>
                            <div class="col-md-10">
                                @Html.DropDownList("GeneralLedgerType", EnumHelper.GetSelectList(typeof(Billing.ViewModel.LedgerType)), "Type", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.GeneralLedgerHeadName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-primary btn-sm" />
                                @Html.ActionLink("Back to List", "Index", "Accounting", new { @class = "btn btn-default btn-sm" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
