@model IEnumerable<Billing.Entities.BankAccount>
<div class="form-group">
    <label class="control-label col-md-2" for="BankAccounts">A/C No</label>
    <div class="col-md-8">
        <select id="BankAccountId" name="BankAccountId" required class="form-control" onchange="return BankBalance()">
            <option value="0">Account No</option>
            @foreach (var item in Model)
            {
                <option value="@item.Id">@item.AccountNames - @item.AccountNo</option>
            }
        </select>
    </div>
</div>
